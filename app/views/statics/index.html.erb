<div id="login_frm" >
	<h1>Welcome!</h1>

	<p>Please login to use the app:</p>
	<%= form_tag("/login", method: "post", class: "app_form") do %>
		<%= label_tag "Username:" %> <br>
		<%= text_field_tag :username %> <br>
		<%= label_tag "Password:" %> <br>
		<%= password_field_tag :password %> <br>
		<%= submit_tag "Login", class: "app_button" %>
	<% end %>
	<br>
	<%= link_to "Forgot password?", "#" %>
	
	<p>Don't have an account? <%= link_to "Sign up here.", "signup" %></p>
</div>